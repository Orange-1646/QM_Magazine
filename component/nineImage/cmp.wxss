.container{
  width: 700rpx;
}
.image-container{
  width: 700rpx;
  height: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  position: relative;
}
.image{
  width: 31%;
  height: 31%;
}
.text-container{
  padding: 0 30rpx;
  font-size: 40rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}
.counter{
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  background: rgba(100, 100, 100, 0.6);
  border: 1rpx solid #fefefe;
  padding: 5rpx;
}