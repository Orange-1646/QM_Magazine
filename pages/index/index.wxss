/* pages/index/index.wxss */
.container{
  width: 100%;
  position: relative;
  border-top: 1rpx solid #fff;
}
.to-catalog{
  display: inline-block;
  border: 2rpx solid black;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.nav{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  /* border: 1px solid black; */
}
.recommend{
  margin-top: 110rpx;
  display: block;
}
.loading-container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
}
.loading{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
}