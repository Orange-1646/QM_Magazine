/* pages/mark/mark.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.user-container{
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx 0;
  background: #fff;
}
.user-info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.user-name{
  font-size: 40rpx;
}
.user-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-avatar image{
  width: 100rpx;
  height: 100rpx;
}
.confirmation{
  padding: 0;
  border: 0;
}
.share{
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.share image{
  width: 50rpx;
  height: 50rpx;
}