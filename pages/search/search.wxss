/* pages/search/search.wxss */
.recommend-container{
  width: 700rpx;
  margin: 60rpx auto;
  border-top: 2rpx solid black;
  border-bottom: 2rpx solid black;
  padding: 60rpx 0;
}
.tag{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.recommend-list{
  font-size: 24rpx;
  line-height: 40rpx;
}
.loading-container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
}
.loading{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
}